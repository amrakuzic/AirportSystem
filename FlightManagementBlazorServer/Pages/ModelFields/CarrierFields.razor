<link href="/css/edit.css" rel="stylesheet" />

<div class="carrierFields" style="padding:1%">
  <div class="form-group row">
    <label for="carrierName" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
        <InputText id="carrierName" @bind-Value="@Carrier.Name" class="form-control"></InputText>
    </div>
  </div>    
  <div class="form-group row">
    <label for="carrierCountry" class="col-sm-2 col-form-label">Country</label>
    <div class="col-sm-10">
        <InputText id="carrierCountry" @bind-Value="@Carrier.Country" class="form-control"></InputText>
    </div>
  </div>    

</div>

@code {
    [Parameter]
    public Carrier Carrier { get; set; }
}
